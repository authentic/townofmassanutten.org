function init_tinymce_for(jq_selector) {
  tinymce.init({
    selector: jq_selector,
    menubar : ["file", "edit", "view", "insert", "format", "tools"],
    toolbar:  "undo redo ltr rtl paste preview visualblocks visualchars save print searchreplace | styleselect a11ycheck | style-p style-h1 style-h2 style-h3 | bold italic forecolor backcolor | bullist numlist outdent indent | link image anchor restoredraft charmap emoticons insertdatetime nonbreaking media pagebreak table template | fullpage fullscreen code codesample spellchecker",
      contextmenu: "link image inserttable | cell row column deletetable",
      content_css : '<%= asset_path "tinymce.scss", :only_path => false %>',
    plugins: ["advlist", "anchor", "autolink", "autoresize", "autosave", "bbcode", "charmap", "code", "codesample", "colorpicker", "contextmenu", "directionality", "emoticons", "fullpage", "fullscreen", "hr", "image", "imagetools", "importcss", "insertdatetime", "link", "media", "nonbreaking", "noneditable", "pagebreak", "paste", "preview", "print", "save", "searchreplace", "spellchecker", "stylebuttons", "tabfocus", "table", "template", "textcolor", "textpattern", "visualblocks", "visualchars", "wordcount"],
    skin_url: '/assets/tinymce/skins/lightgray',

    file_browser_callback   : function(field_name, url, type, win) {

        if (type == 'image') {
          var title_text = "Choose an Image"
          var cmsURL     = '/<%= Refinery::Core.backend_route %>/dialogs/image';
        } else {
          var title_text = "Choose Object to Link"
          var cmsURL     = '/<%= Refinery::Core.backend_route %>/dialogs/link';
        }

        tinymce.activeEditor.windowManager.open({
          file            : cmsURL,
          title           : title_text,
          width           : 866,  // Your dimensions may differ - toy around with them!
          height          : 600,
          resizable       : "yes",
          inline          : "yes",  // This parameter only has an effect if you use the inlinepopups plugin!
          close_previous  : "yes"
        }, {
          window  : win,
          input   : field_name
        });
      }
  });
}

$(document).on('ready page:load', function(){

  init_tinymce_for("textarea.visual_editor")

  $('#submit_button').on('click', function(event){
    if (top.tinymce.activeEditor
      && top.tinymce.activeEditor.windowManager
      && top.tinymce.activeEditor.windowManager.getParams()) {
      var args           = top.tinymce.activeEditor.windowManager.getParams();
      win                = (args.window);
      input              = (args.input);
      dialog_type        = $('#visual_editor_dialog_type', window.parent.document).val();

      if (dialog_type == 'link') {
        selector = "#visual_editor_href";
      } else {
        selector = "#visual_editor_src";
      }
      win.document.getElementById(input).value = $(selector, window.parent.document).val();
      // window.alert( JSON.stringify(args) );
      top.tinymce.activeEditor.windowManager.close();
    }
  });

});
