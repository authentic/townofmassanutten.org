<meta charset='<%= Rails.application.config.encoding %>' />
<!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /><![endif]-->
<title><%= browser_title(yield(:title)) %></title>
<%= tag(:meta, name: 'description', content: @meta.meta_description) if @meta.meta_description.present? -%>
<%= tag(:meta, name: 'viewport', content: 'width=device-width,initial-scale=1, shrink-to-fit=no') -%>
<%= tag(:meta, name: 'format-detection', content: 'telephone=no') -%>
<meta name="google-site-verification" content="Eh4xeKyrQMtEvuDk81t2eejL_yg3GlGN1UfGl3PyCLM" />
<%= tag(:link, href: request.protocol+request.host_with_port+@canonical, rel: 'canonical') if @canonical.present? -%>
<%= csrf_meta_tags if Refinery::Core.authenticity_token_on_frontend -%>
<%= tag(:link, href:'https://fonts.googleapis.com/css?family=Roboto:400,700,700i', rel: 'stylesheet') %>
<%= tag(:link, href:'https://fonts.googleapis.com/css?family=Libre+Baskerville:400,400i,700', rel: 'stylesheet') %>
<%= tag(:link, href:'https://fonts.googleapis.com/css?family=Merriweather+Sans:300,400,700|Merriweather:300,400,700,700i&display=swap', rel: 'stylesheet') %>

<%= yield :meta %>


<%= stylesheet_link_tag 'application' %>
<%= yield :stylesheets %>

<%= render '/refinery/google_analytics' %>

<%= javascript_include_tag 'modernizr-min' %>

